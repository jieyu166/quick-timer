html, body
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: moz-none
  -ms-user-select: none
  user-select: none

#timer
  width: 100%
  height: 100%
  line-height: 100%
  background: #000
  color: #fff
  text-align: center
  font-weight: 700
  font-family: century gothic

#hide, #toggle, #reset, #min10, #min60, #add10, #add60, #def300, #def1500, #def1800, #def2400
  position: absolute
  top: 5px
  left: 50%
  margin-left: -210px
  width: 170px
  height: 44px
  line-height: 30px
#reset
  margin-left: 50px
#hide
  margin-left: -30px
  width: 70px

#min10, #min60, #add10, #add60
  width: 50px

#def300, #def1500, #def1800, #def2400
  bottom: 5px
  top: auto
  width: 70px
#min10
  margin-left: -270px
#min60
  margin-left: -330px
#add10
  margin-left: 230px
#add60
  margin-left: 290px

#def300
  margin-left: -215px
#def1500
  margin-left: -75px
#def1800
  margin-left: 65px
#def2400
  margin-left: 205px

#audio
  position: absolute
  bottom: 30px
  right: 10px
  z-index: 10

#xxx
  position: absolute
  top: 10px
  left: 10px

#meta
  position: absolute
  top: 60px
  left: 20px
  color: #0fd6ff
  font-weight: 600
  text-shadow: 0 1px 4px rgba(0, 0, 0, 0.8)
  .meta-row
    margin-top: 6px
    display: flex
    gap: 8px
    align-items: baseline
  .label
    font-size: 14px
  #paused-time
    font-size: 16px
  #session-result
    color: #d8f5ff
    max-width: 320px
    line-height: 1.3
